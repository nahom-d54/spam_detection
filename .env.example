# Application
APP_NAME=Spam Detection API
APP_VERSION=0.1.0
DEBUG=True

# Database (PostgreSQL)
DATABASE_URL=postgresql://spam_user:spam_pass@localhost:5432/spam_detection

# Redis
REDIS_URL=redis://localhost:6379/0

# IMAP Configuration (hardcoded server for all users)
IMAP_HOST=imap.yourdomain.com
IMAP_PORT=993
IMAP_USE_SSL=True

# SMTP Configuration (hardcoded server for all users)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USE_TLS=True

# Security - CHANGE THESE IN PRODUCTION!
# Generate JWT secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Generate Fernet key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=your-fernet-encryption-key-change-this-in-production

JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Monitoring
EMAIL_CHECK_INTERVAL_SECONDS=120

# ML Model Paths
SPAM_MODEL_PATH=models/spam_classifier_model.joblib
VECTORIZER_PATH=models/tfidf_vectorizer.joblib

# CORS (Next.js URLs)
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]
